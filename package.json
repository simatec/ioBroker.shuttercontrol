  "main": "main.js",
  "files": [
    "admin/",
    "!admin/**/*/flat.txt",
    "lib/",
    "!.dev-server",
    "!.vscode",
    "!.github",
    "!.git",
    "!.DS_Store",
    "!.gitignore",
    "!.gitattributes",
    "!node_modules",
    "!tasks",
    "!.idea",
    "!test",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
